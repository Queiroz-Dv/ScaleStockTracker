<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scale Stock Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Scale Stock Tracker</a>
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>*@
            </div>
        </nav>
    </header>

    <div id="sidebarMenu" class="collapse d-lg-block sidebar bg-dark card-body" >
        <div class="list-group list-group-flush mx-3 mt-4">
            <nav class="col-md-4 d-none d-md-block bg-dark sidebar">
                <div class="sidebar-sticky col-2">

                    <a class="active list-group-item list-group-item-action py-2 ripple" href="#"><span>Main Dashboard</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple active" href="#"><span>Clientes</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Colaboradores</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Empresa</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Filial</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Departamento</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Cargo</span></a>

                </div>
            </nav>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2023 - ScaleStockTracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
