<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scale Stock Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top p">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Scale Stock Tracker</a>
            </div>
        </nav>
    </header>

    <div id="sidebarMenu" class="collapse d-lg-block sidebar bg-dark">
        <div class="list-group list-group-flush">
            <nav class="col-md-4 d-none d-md-block bg-dark sidebar">
                <div class="sidebar-sticky col-2 mt-md-5 ml-2">

                    <a class="list-group-item list-group-item-action py-2 ripple bg-info text-light" href="#"><span>Main Dashboard</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" asp-controller="Empresa" asp-action="EmpresaBoard"><span>Empresa</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Filial</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Departamento</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Cargo</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Colaboradores</span></a>
                    <a class="list-group-item list-group-item-action py-2 ripple" href="#"><span>Clientes</span></a>

                </div>
            </nav>
        </div>
    </div>


    <div class="container mt-5">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2023 - ScaleStockTracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
